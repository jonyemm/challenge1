{
  "handler": {
    "name": "jonyHandler",
    "type": "ConditionalHandler",
    "config": {
      "condition": "${matches(request.uri.path, '^/jony')}",
      "handler": {
        "type": "StaticResponseHandler",
        "config": {
          "status": 200,
          "headers": {
            "Cache-Control": ["none"],
            "Content-Type": ["text/plain"],
            "X-Content-Type-Options": ["nosniff"]
          },
          "entity": "Este es un mensaje personalizado para la ruta /jony"
        },
        "monitor": {
          "enabled": true
        }
      }
    }
  }
}
