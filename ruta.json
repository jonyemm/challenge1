{
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [],
      "handler": {
        "type": "StaticResponseHandler",
        "config": {
          "status": 200,
          "headers": {
            "Cache-Control": [
              "none"
            ],
            "Content-Type": [
              "text/plain"
            ],
            "X-Content-Type-Options": [
              "nosniff"
            ]
          },
          "entity": "Hello TEST and welcome to OpenIG. Your path is ${request.uri.path}. OpenIG is using the default handler for this route"
        }
      }
    }
  },
  "monitor": {
    "enabled": true
  },
  "condition": "${matches(request.uri.path, '^/jony')}",
 "log": {
    "enabled": true,
    "loggerName": "com.example.route.jony",
    "loggerConfig": {
      "type": "logback",
      "configFile": "./logback.xml"  // Reemplaza con la ubicaci√≥n correcta de tu logback.xml
    }
}
