{
  "name": "20-mb-contracts-2",
  "baseURI": "https://qa-api.actinver.com.mx",
  "condition": "${find(request.uri.path, '^/contracts/thirdParty/account/bank')}",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "OAuth2ResourceServerFilter-1",
          "type": "OAuth2ResourceServerFilter",
          "config": {
            "scopes": [
              "level20"
            ],
            "requireHttps": false,
            "realm": "OpenIG",
            "accessTokenResolver": {
              "name": "token-resolver-1",
              "type": "TokenIntrospectionAccessTokenResolver",
              "config": {
                "endpoint": "https://openam-gfaid-usc1-dev.id.forgerock.io/am/oauth2/alpha/introspect",
                "providerHandler": {
                  "type": "Chain",
                  "config": {
                    "filters": [
                      {
                        "type": "HeaderFilter",
                        "config": {
                          "messageType": "request",
                          "add": {
                            "Authorization": [
                              "Basic ${encodeBase64('oauth2-client:password')}"
                            ]
                          }
                        }
                      }
                    ],
                    "handler": "ForgeRockClientHandler"
                  }
                }
              }
            }
          }
        }
      ],
      "handler" : {
        "type" : "ReverseProxyHandler", 
        "capture" : "all"
        }
    }
  }
}
